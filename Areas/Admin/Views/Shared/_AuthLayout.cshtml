<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - SaleOnline</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body {
            background-color: #0d1126;
            margin: 0;
        }

        .auth-wrapper {
            display: flex;
            height: 100vh;
            justify-content: center;
            align-items: center;
        }

        .auth-container {
            display: flex;
            flex-direction: row;
            width: 850px;
            height: 500px;
            background-color: #1c2431;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0,0,0,0.4);
        }

        .auth-image {
            flex: 1;
            background: url('@ViewBag.ImageUrl') center center / cover no-repeat;
        }

        .auth-form {
            flex: 1;
            padding: 40px;
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .form-control {
            background-color: #2c3543;
            border: none;
            color: white;
        }

        .form-control::placeholder {
            color: #aaa;
        }

        .btn-full {
            width: 100%;
            padding: 10px;
            font-weight: bold;
        }

        a {
            color: #4caf50;
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="auth-wrapper">
        <div class="auth-container">
            <div class="auth-image"></div>
            <div class="auth-form">
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>