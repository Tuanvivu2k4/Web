@model List<SaleOnline.Models.Category>

<!-- Include Swiper styles -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />

<section class="container my-5">
    <p class="text-danger fw-bold mb-1">
        <i class="fas fa-square"></i> categories
    </p>
    <h3 class="fw-bold mb-4">Browse by Category</h3>

    <div class="swiper-container category-swiper">
        <div class="swiper-wrapper">
            @foreach (var item in Model)
            {
                <div class="swiper-slide text-center">
                    <div class="border rounded py-4 px-2 h-100">
                        <img src="@Url.Content(item.Image)" style="height: 40px;" class="mb-2" />
                        <p class="fw-semibold">@item.Name</p>
                    </div>
                </div>
            }
        </div>

        <!-- Nút điều hướng -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>
</section>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

<!-- Init Swiper -->
<script>
    var swiper = new Swiper('.category-swiper', {
        slidesPerView: 2,
        spaceBetween: 16,
        breakpoints: {
            576: { slidesPerView: 3 },
            768: { slidesPerView: 4 },
            992: { slidesPerView: 5 },
            1200: { slidesPerView: 6 }
        },
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        }
    });
</script>
